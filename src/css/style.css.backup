* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #333;
    background-color: #f9f9f9;
}

/* Navigation Styles */
nav {
    background: linear-gradient(135deg, #333 0%, #555 100%);
    color: #fff;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

nav .logo {
    font-size: 28px;
    font-weight: bold;
    color: #007bff;
}

nav .nav-links {
    list-style: none;
    display: flex;
    gap: 30px;
}

nav .nav-links li {
    margin: 0;
}

nav .nav-links a {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

nav .nav-links a:hover,
nav .nav-links a.active {
    color: #007bff;
    border-bottom: 2px solid #007bff;
}

.burger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hero-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 60px 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    min-height: 500px;
}

.hero-text {
    max-width: 600px;
    flex: 1;
}

.hero-text h3 {
    font-size: 20px;
    margin: 0 0 10px 0;
    opacity: 0.9;
}

.hero-text h1 {
    font-size: 48px;
    margin: 10px 0;
    font-weight: bold;
}

.hero-text h2 {
    font-size: 24px;
    margin: 10px 0;
    font-weight: 500;
    opacity: 0.95;
}

.hero-text h2 span {
    color: #ffd700;
    font-weight: bold;
}

.hero-text p {
    font-size: 16px;
    margin: 15px 0;
    opacity: 0.9;
}

.cta-buttons {
    margin-top: 30px;
    display: flex;
    gap: 15px;
}

.cta-buttons .btn {
    padding: 12px 30px;
    margin-right: 0;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    display: inline-block;
}

.btn.primary {
    background: #007bff;
    color: #fff;
}

.btn.primary:hover {
    background: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.btn.secondary {
    background: transparent;
    color: #fff;
    border: 2px solid #fff;
}

.btn.secondary:hover {
    background: #fff;
    color: #667eea;
    transform: translateY(-2px);
}

.container {
    max-width: 1200px;
    margin: auto;
    padding: 40px 20px;
}

.section-title {
    font-size: 36px;
    margin-bottom: 30px;
    text-align: center;
    color: #333;
    font-weight: bold;
    position: relative;
    padding-bottom: 15px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2);
    border-radius: 2px;
}

/* Section Background Colors */
section#about,
section#contact {
    background: white;
}

section#skills,
section#projects {
    background: #f9f9f9;
}

section#experience {
    background: white;
}

.about-desc {
    margin-bottom: 30px;
    font-size: 16px;
    text-align: center;
    color: #555;
    line-height: 1.8;
}

.education-grid {
    display: flex;
    justify-content: space-around;
    gap: 20px;
    flex-wrap: wrap;
}

.edu-card {
    background: white;
    padding: 30px;
    border-radius: 10px;
    flex: 1;
    min-width: 250px;
    margin: 0;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    border-top: 4px solid #007bff;
}

.edu-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

.edu-card i {
    font-size: 40px;
    color: #007bff;
    margin-bottom: 15px;
}

.edu-card h3 {
    font-size: 20px;
    margin: 15px 0;
    color: #333;
}

.edu-card p {
    color: #666;
    margin: 0;
}

.skills-wrapper {
    display: flex;
    justify-content: space-around;
    gap: 30px;
    flex-wrap: wrap;
}

.skill-category {
    flex: 1;
    min-width: 300px;
    margin: 0;
}

.skill-category h3 {
    font-size: 22px;
    margin-bottom: 20px;
    color: #333;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.tags span {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: #fff;
    padding: 10px 16px;
    margin: 0;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.tags span:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.timeline {
    position: relative;
    padding: 20px 0;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #ddd;
    transform: translateX(-50%);
}

.timeline-item {
    margin: 30px 0;
    width: 45%;
    opacity: 0;
    transition: opacity 0.6s ease;
}

.timeline-item:nth-child(odd) {
    margin-left: 0;
    text-align: right;
}

.timeline-item:nth-child(even) {
    margin-left: 55%;
}

.timeline-item.hidden {
    opacity: 1;
}

.timeline-content {
    background: white;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    border-left: 4px solid #007bff;
}

.timeline-item:nth-child(even) .timeline-content {
    border-left: none;
    border-right: 4px solid #007bff;
}

.timeline-content h3 {
    font-size: 20px;
    margin: 0 0 5px 0;
    color: #333;
}

.timeline-content h4 {
    font-size: 14px;
    color: #666;
    margin: 0 0 15px 0;
    font-weight: 500;
}

.timeline-content ul {
    margin: 0;
    padding-left: 20px;
    color: #555;
}

.timeline-content li {
    margin: 8px 0;
    line-height: 1.6;
}

.project-grid {
    display: flex;
    justify-content: space-around;
    gap: 20px;
    flex-wrap: wrap;
}

.project-card {
    background: white;
    padding: 30px;
    border-radius: 10px;
    flex: 1;
    min-width: 280px;
    margin: 0;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    border-top: 4px solid #667eea;
}

.project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    border-top-color: #764ba2;
}

.card-content h3 {
    font-size: 20px;
    margin: 0 0 15px 0;
    color: #333;
}

.card-content p {
    color: #666;
    margin: 0;
    line-height: 1.6;
}

.contact-wrapper {
    display: flex;
    justify-content: center;
    gap: 60px;
    flex-wrap: wrap;
}

.contact-info {
    flex: 1;
    min-width: 250px;
}

.info-item {
    margin: 20px 0;
    display: flex;
    align-items: center;
    gap: 15px;
    font-size: 16px;
}

.info-item i {
    font-size: 24px;
    color: #007bff;
    width: 30px;
    text-align: center;
}

.info-item span {
    color: #333;
}

/* Placeholder image styling */
.placeholder-image {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 18px;
    font-weight: bold;
}

/* Hero image styling */
.hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
}

/* Hidden animation for timeline items */
.timeline-item.hidden {
    opacity: 1;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .timeline::before {
        left: 0;
    }

    .timeline-item {
        width: 100%;
        margin-left: 30px !important;
        text-align: left !important;
    }

    .timeline-content {
        border-left: 4px solid #007bff;
        border-right: none;
    }

    .hero-text h1 {
        font-size: 40px;
    }

    .hero-text h2 {
        font-size: 22px;
    }
}

@media (max-width: 768px) {
    nav {
        padding: 10px 15px;
    }

    nav .logo {
        font-size: 24px;
    }

    nav .nav-links {
        position: fixed;
        right: 0;
        top: 0;
        flex-direction: column;
        background-color: #333;
        width: 100%;
        text-align: left;
        transform: translateX(100%);
        transition: transform 0.3s;
        padding-top: 80px;
        gap: 0;
    }

    nav .nav-links li {
        margin: 0;
        padding: 15px 20px;
        border-bottom: 1px solid #444;
    }

    nav .nav-links a {
        display: block;
    }

    nav .nav-links.active {
        transform: translateX(0);
    }

    .burger {
        display: flex;
    }

    .burger div {
        width: 25px;
        height: 3px;
        background-color: white;
        margin: 5px 0;
        transition: all 0.3s;
    }

    .burger.toggle div:nth-child(1) {
        transform: rotate(-45deg) translate(-5px, 6px);
    }

    .burger.toggle div:nth-child(2) {
        opacity: 0;
    }

    .burger.toggle div:nth-child(3) {
        transform: rotate(45deg) translate(-5px, -6px);
    }

    .hero-content {
        flex-direction: column;
        padding: 40px 20px;
        min-height: auto;
        text-align: center;
    }

    .hero-text {
        max-width: 100%;
    }

    .hero-text h1 {
        font-size: 36px;
    }

    .hero-text h2 {
        font-size: 20px;
    }

    .cta-buttons {
        flex-direction: column;
        gap: 10px;
    }

    .cta-buttons .btn {
        width: 100%;
        text-align: center;
        margin-right: 0;
    }

    .placeholder-image {
        width: 200px;
        height: 200px;
        margin-top: 20px;
        font-size: 14px;
    }

    .education-grid {
        flex-direction: column;
        gap: 15px;
    }

    .edu-card {
        margin: 0 !important;
    }

    .skills-wrapper {
        flex-direction: column;
        gap: 20px;
    }

    .skill-category {
        margin: 0 !important;
    }

    .project-grid {
        flex-direction: column;
        gap: 15px;
    }

    .project-card {
        margin: 0 !important;
        width: 100%;
    }

    .contact-wrapper {
        flex-direction: column;
        gap: 30px;
    }

    .contact-info {
        min-width: 100%;
    }

    .section-title {
        font-size: 28px;
    }

    .container {
        padding: 30px 15px;
    }
}

@media (max-width: 480px) {
    nav {
        padding: 10px 10px;
    }

    nav .logo {
        font-size: 20px;
    }

    nav .nav-links {
        padding-top: 70px;
    }

    .hero-content {
        padding: 30px 10px;
    }

    .hero-text h1 {
        font-size: 28px;
    }

    .hero-text h2 {
        font-size: 18px;
    }

    .hero-text h3 {
        font-size: 16px;
    }

    .hero-text p {
        font-size: 14px;
    }

    .cta-buttons .btn {
        padding: 10px 20px;
        font-size: 14px;
    }

    .placeholder-image {
        width: 150px;
        height: 150px;
        font-size: 12px;
    }

    .section-title {
        font-size: 24px;
    }

    .edu-card h3 {
        font-size: 18px;
    }

    .edu-card p {
        font-size: 14px;
    }

    .tags span {
        font-size: 12px;
        padding: 8px 12px;
    }

    .timeline-item {
        margin-left: 20px !important;
    }

    .timeline-content {
        padding: 20px;
    }

    .timeline-content h3 {
        font-size: 18px;
    }

    .timeline-content h4 {
        font-size: 13px;
    }

    .timeline-content ul {
        padding-left: 15px;
        font-size: 14px;
    }

    .card-content h3 {
        font-size: 18px;
    }

    .card-content p {
        font-size: 14px;
    }

    .info-item {
        font-size: 14px;
        margin: 15px 0;
    }

    .container {
        padding: 25px 10px;
    }
}

footer {
    text-align: center;
    padding: 30px 20px;
    background: linear-gradient(135deg, #333 0%, #555 100%);
    color: #fff;
    margin-top: 40px;
    font-size: 14px;
}

footer p {
    margin: 0;
}